<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="preconnect" href="https://fonts.bunny.net">
    <link href="https://fonts.bunny.net/css?family=inter:400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/styles.css">
    <title>
      {{ page.title }}
      •
      {{ site.title }}
    </title>
  </head>
  <body class="prose prose-neutral dark:prose-invert mx-auto flex min-h-screen flex-col bg-white px-4 antialiased md:px-0 dark:bg-neutral-900">
    <header class="mb-8 mt-24 flex items-center">
      <strong class="text-lg tracking-widest">
        <a href="/" class="not-prose">{{ site.title }}</a>
      </strong>
      <div class="ml-auto pb-[0.1875rem]">/</div>
      <nav class="ml-3 flex gap-x-3">
        {%- assign nav_pages = site.pages | where: 'nav', true -%}
        {%- for item in nav_pages %}
          <a
            {% if page.url == item.url -%}
              aria-current="page"
            {% else -%}
              class="no-underline"
            {% endif -%}
            href="{{ item.url | remove: ".html" }}"
          >
            {{ item.title }}
          </a>
        {%- endfor %}
      </nav>
    </header>
    <main class="flex-grow">
      <article class="sm:text-justify">
        {{ content }}
      </article>
    </main>
    <footer class="flex justify-center my-12">
      <small>
        © {{ site.time | date: '%Y' }}
        {{ site.title -}}
      </small>
    </footer>
  </body>
</html>
